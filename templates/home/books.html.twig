<div class="container-fluid d-flex text-center p-4 w-100 flex-column">
    <h3 class="mb-4">Derniers livres</h3>
    <div class="container-fluid d-flex flex-wrap justify-content-center w-100">
        {% for book in books %}
            <a class="card m-2" style="width: 20%;" href="{{ path('app_book_details', {'slug': book.slug }) }}">
                <div class="card-body">
                    <p class="card-text">{{ book.title }}</p>
                </div>
            </a>
        {% else %}
            <span>Pas de Livres disponible...</span>
        {% endfor %}
    </div>
</div>