{% extends 'base.html.twig' %}

{% block title %}Hello MovieController!{% endblock %}

{% block body %}

<div class="example-wrapper">
    <h1>{{ movie.title }}</h1>

    <p>Released at {{ movie.releasedAt|date('d/m/Y') }}</p>
    <label>Genres:</label>
    <ul>
        {% for genre in movie.genres %}
            <li>{{ genre }}</li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
