{% extends 'base.html.twig' %}

{% block title %}Movies - {{ movie.title }}{% endblock %}

{% block body %}
    <div class="container-fluid p-4">
        <div class="card" style="width: 18rem;">
            <div class="card-header">
                <h1>{{ movie.title }}</h1>
            </div>
            <img src="{{ movie.poster != 'N/A' ? movie.poster : asset('build/images/no-poster.png') }}" class="card-img-top" alt="{{ movie.title }} poster">
            <div class="card-body">
                <ul>
                    <li>Id : {{ movie.id }}</li>
                    <li>Released : {{ movie.releasedAt|date('Y M d') }}</li>
                    <li>Country : {{ movie.country }}</li>
                    <li>Genres : {{ movie.genres|reduce((carry, genre) => carry == '' ? carry ~ genre.name : carry ~ ', ' ~ genre.name, '') }}</li>
                    <li>Rated : {{ movie.rated }}</li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
